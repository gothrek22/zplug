#!/usr/bin/env zsh
# Description:
#   Self management of zplug

if ! __zplug::base::base::zpluged "gothrek22/zplug"; then
    __zplug::io::print::f \
        --die \
        --zplug \
        "gothrek22/zplug: not managed yet\n"
    return 1
fi

ln -snf \
    "$ZPLUG_REPOS/gothrek22/zplug/init.zsh" \
    "$ZPLUG_HOME/init.zsh"
